datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  password         String
  role             String?  @default("user")
  firstname        String?
  lastname         String?
  mobile           String?
  country          String?
  MIBPG            String?
  businessName     String?
  organizationType String?
  county           String?
  place            String?
  address          String?
  oib              String?
  activities       String[]
  createdAt        DateTime @default(now())
}
